---
import '../styles/global.css';
import '@fortawesome/fontawesome-free/css/all.min.css';

export interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
}

const { title, description, image, type = 'website' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = image || '/assets/images/profile.jpg';
const siteTitle = 'Daniel Margol';
const fullTitle = title === 'Home' ? siteTitle : `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="en">
  <head>
    <script is:inline>
      // Theme initialization - runs before page renders to prevent flash
      (function () {
        // Check for saved preference first
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
          if (savedTheme === 'dark') {
            document.documentElement.classList.add('dark');
          }
          return;
        }

        // No saved preference - use time-based theme with seasonal sunrise/sunset
        function getSeasonalSunTimes() {
          const now = new Date();
          const dayOfYear = Math.floor((now - new Date(now.getFullYear(), 0, 0)) / 86400000);

          // Approximate sunrise/sunset times based on day of year
          // Uses a sine wave to simulate seasonal variation
          // Peak daylight around summer solstice (day 172), shortest around winter solstice (day 355)
          const seasonalOffset = Math.sin(((dayOfYear - 80) * 2 * Math.PI) / 365) * 1.5;

          // Base times: sunrise 6:30, sunset 18:30, adjusted by season (+/- 1.5 hours)
          const sunrise = 6.5 - seasonalOffset;
          const sunset = 18.5 + seasonalOffset;

          return { sunrise, sunset };
        }

        const { sunrise, sunset } = getSeasonalSunTimes();
        const now = new Date();
        const currentHour = now.getHours() + now.getMinutes() / 60;

        const isDaylight = currentHour >= sunrise && currentHour < sunset;

        if (!isDaylight) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-59539046-1"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'UA-59539046-1');
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/assets/images/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon/favicon-16x16.png" />

    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="author" content="Daniel Margol" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(socialImage, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(socialImage, Astro.site)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>
